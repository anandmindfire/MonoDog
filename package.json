{
  "name": "monodog",
  "version": "1.0.0",
  "description": "A self-hosted monorepo package manager dashboard",
  "private": true,
  "scripts": {
    "dev": "pnpm turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "refresh": "tsx scripts/refresh.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*"
  ],
  "packageManager": "pnpm@9.15.4",
  "dependencies": {
    "@prisma/client": "^5.7.0"
  }
}
