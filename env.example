# monodog Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL (recommended for production)
DATABASE_URL="sql://username:password@localhost:5432/monodog"

# SQLite (for development)
# DATABASE_URL="file:./dev.db"

# =============================================================================
# Dashboard Configuration
# =============================================================================

# Dashboard server settings
DASHBOARD_PORT=5173
DASHBOARD_HOST=localhost

# Backend API settings
API_BASE_URL=http://localhost:4000
BACKEND_PORT=4000
BACKEND_HOST=localhost

# =============================================================================
# CI/CD Provider Configuration
# =============================================================================

# GitHub Actions
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_API_URL=https://api.github.com

# GitLab CI
GITLAB_TOKEN=your_gitlab_access_token
GITLAB_API_URL=https://gitlab.com/api/v4

# CircleCI
CIRCLECI_TOKEN=your_circleci_api_token
CIRCLECI_API_URL=https://circleci.com/api/v2

# Jenkins
JENKINS_URL=http://your-jenkins-server
JENKINS_USERNAME=your_jenkins_username
JENKINS_TOKEN=your_jenkins_api_token

# Azure DevOps
AZURE_DEVOPS_TOKEN=your_azure_devops_pat
AZURE_DEVOPS_ORG=your_organization
AZURE_DEVOPS_PROJECT=your_project

# =============================================================================
# Security & Authentication
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Monitoring & Logging
# =============================================================================

# Log Level
LOG_LEVEL=info

# Sentry (optional - for error tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# =============================================================================
# Cache Configuration
# =============================================================================

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Cache TTL (in seconds)
CACHE_TTL=300

# =============================================================================
# File Storage
# =============================================================================

# Local file storage path
STORAGE_PATH=./storage

# S3 (optional - for cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# =============================================================================
# Email Configuration (optional)
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# =============================================================================
# Development Settings
# =============================================================================

# Node Environment
NODE_ENV=development

# Debug Mode
DEBUG=monodog:*

# Hot Reload
WATCH_MODE=true

# =============================================================================
# Performance Tuning
# =============================================================================

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# API Timeout
API_TIMEOUT=30000

# Scan Timeout
SCAN_TIMEOUT=60000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_CI_INTEGRATION=true
ENABLE_HEALTH_CHECKS=true
ENABLE_DEPENDENCY_ANALYSIS=true
ENABLE_BUILD_TRIGGERS=true
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# Custom Integrations
# =============================================================================

# Custom CI Provider
CUSTOM_CI_URL=https://your-custom-ci.com/api
CUSTOM_CI_TOKEN=your_custom_ci_token

# Webhook URLs
WEBHOOK_URL=https://your-webhook-endpoint.com
WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# Backup & Maintenance
# =============================================================================

# Auto-backup settings
AUTO_BACKUP_ENABLED=false
AUTO_BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."
